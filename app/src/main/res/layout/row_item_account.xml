<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin5"
    >
    <TextView
        android:text="15.06.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_date"
        android:paddingLeft="@dimen/margin7"
        android:paddingRight="@dimen/margin20"
        android:textSize="@dimen/text14"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_white"
        android:layout_marginLeft="@dimen/margin5"
        android:visibility="visible"
        android:layout_below="@+id/row_status"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="32626-YH-4648"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_examId"
        android:gravity="left"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin5"
        android:textSize="@dimen/text14"
        android:textColor="@color/color_white"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin10"
        android:layout_toRightOf="@+id/row_date"
        android:layout_toLeftOf="@+id/row_score"
        android:visibility="visible"/>

    <TextView
        android:text="34"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/row_score"
        android:gravity="left|center_vertical"
        android:paddingLeft="18dp"
        android:textSize="@dimen/text14"
        android:textColor="@color/color_white"
        android:layout_marginRight="@dimen/margin10"
        android:visibility="visible"
        android:layout_alignTop="@+id/row_examId"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_status"
        android:gravity="center"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10"
        android:textSize="@dimen/text14"
        android:textColor="@color/color_black"
        android:layout_marginRight="@dimen/margin10"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>